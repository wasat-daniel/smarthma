<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_details" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_details</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleBtnStart" parent="@android:style/Widget.Button">
        <item name="android:textSize">40sp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_opal</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="styleBtnShowProduct" parent="@android:style/Widget.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_show_prod</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="styleSearchHistory">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="styleBtnDetails" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_show_prod</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:padding">6dip</item>
    </style>

    <!--    <style name="styleImageBg">
            <item name="android:layout_gravity">left</item>
            <item name="android:background">#FFFFFF</item>
            <item name="android:scaleType">fitStart</item>
            <item name="android:src">@drawable/earth_bg</item>
        </style>-->

    <style name="styleDataseriesIntroTitles" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleDataseriesIntroValues" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleSettingsBasicValues" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="styleSettingsBasicTitles" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/button_red_selector</item>
    </style>


    <!-- Application theme. -->
    <style name="AppNoActionBarTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppFullScreenTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- INFOAPPS -->

    <style name="textTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/browse_eo_padding_text</item>
        <item name="android:textSize">@dimen/browse_eo_text</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMainTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/browse_eo_padding_text</item>
        <item name="android:paddingBottom">@dimen/browse_eo_padding_text</item>
        <item name="android:textSize">@dimen/browse_eo_text</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/browse_eo_padding_text</item>
        <item name="android:textSize">@dimen/browse_eo_text</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="textBold" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/browse_eo_padding_text</item>
        <item name="android:textSize">@dimen/browse_eo_text</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMetaHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/browse_eo_padding</item>
        <item name="android:paddingTop">@dimen/browse_eo_padding_text</item>
        <item name="android:paddingBottom">@dimen/browse_eo_padding_text</item>
        <item name="android:textSize">@dimen/search_eo_data_text</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="textMetaItemTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">@dimen/browse_eo_padding</item>
        <item name="android:textSize">@dimen/search_eo_data_text_medium</item>
    </style>

    <style name="textMetaItemValue" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/search_eo_data_text_medium</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="textSearchParams" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingBottom">@dimen/search_eo_data_padding</item>
        <item name="android:paddingLeft">@dimen/search_eo_data_padding</item>
        <item name="android:paddingTop">@dimen/search_eo_data_padding_top</item>
        <item name="android:textSize">@dimen/search_eo_data_text_medium</item>
    </style>


    <style name="buttonBlue" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:textSize">@dimen/button_blue_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="buttonBlueGo" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:textSize">@dimen/button_blue_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="dialogHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:textColor">@color/text_black</item>

    </style>

