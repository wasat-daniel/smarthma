<RelativeLayout style="?android:attr/textAppearanceLarge"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffeb3b"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/swipe_list_deleteview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff558b2f"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/swipe_list_mainview"
        style="?android:attr/textAppearanceLarge"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="vertical"
        tools:context="">

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/dataseries_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="8dip"
            android:paddingTop="5dip"
            android:text="@string/lorem"
            android:textColor="@color/text_black"
            android:textSize="18sp"/>

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/dataseries_listing_smallprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dip"
            android:paddingLeft="15dip"
            android:paddingRight="8dip"
            android:paddingTop="2dp"
            android:text="@string/lorem"
            android:textColor="@color/text_black"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>