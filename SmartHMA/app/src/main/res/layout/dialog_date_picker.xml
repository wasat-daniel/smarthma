<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/background_white"
              android:gravity="center_horizontal"
              android:minWidth="400dp"
              android:orientation="vertical">

    <pl.wasat.smarthma.customviews.TextViewWithFont
        style="@style/dialogHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_the_date"/>

    <DatePicker
        android:id="@+id/dialog_date_picker_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/search_eo_data_padding"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:paddingTop="@dimen/search_eo_data_padding_medium">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:orientation="horizontal"
            android:padding="@dimen/search_eo_data_padding">

            <Button
                android:id="@+id/dialog_date_picker_cancel"
                style="@style/buttonBlue"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_blue_height"
                android:layout_weight="1"
                android:text="@android:string/cancel"/>

            <Button
                android:id="@+id/dialog_date_picker_choose"
                style="@style/buttonBlue"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_blue_height"
                android:layout_marginLeft="@dimen/search_eo_data_padding_small"
                android:layout_weight="1"
                android:text="@string/choose"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>