<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup_sort_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/browse_eo_padding"
        android:paddingRight="@dimen/browse_eo_padding"
        android:paddingTop="@dimen/browse_eo_padding">

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/tv_sort"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="@string/action_sort"
            android:textColor="@color/text_black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_search_history"
            android:layout_toRightOf="@+id/tv_search_history"
            android:layout_weight="1"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_sort"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_favourites_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/browse_eo_padding"
        android:paddingRight="@dimen/browse_eo_padding"
        android:paddingTop="@dimen/browse_eo_padding">

        <pl.wasat.smarthma.customviews.TextViewWithFont
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/browse_eo_padding"
            android:layout_weight="1"
            android:text="@string/favourites"
            android:textColor="@color/text_black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_search"
            android:layout_toRightOf="@+id/tv_search"
            android:layout_weight="1"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_refresh"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_menu_item_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/browse_eo_padding"
        android:paddingLeft="@dimen/browse_eo_padding"
        android:paddingRight="@dimen/browse_eo_padding"
        android:paddingTop="@dimen/browse_eo_padding">

        <pl.wasat.smarthma.customviews.TextViewWithFont
            android:id="@+id/tv_menu_settings"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/browse_eo_padding"
            android:layout_weight="1"
            android:text="@string/menu_settings"
            android:textColor="@color/text_black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_menu_settings"
            android:layout_toRightOf="@+id/tv_menu_settings"
            android:layout_weight="1"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_settings"/>
    </LinearLayout>
</LinearLayout>